- if products_empty?
  - populate_db
- Product.all.in_groups_of(4).each do |dishes|
  .items
    - dishes.each do |dish|
      .item
        .picture
          = image_tag(dish.image,alt: dish.title)
        %b
          %p.title= dish.title
          %p.category= dish.category
          %p.price= '$'+dish.price.round.to_s
