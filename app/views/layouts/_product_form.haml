=form_with(model: @product,url: admin_product_url(@product) ,local:true) do |f|
  =f.label :title
  =f.text_field :title, class: 'form-control'
  =f.label :category
  =f.text_field :category, class: 'form-control'
  =f.label :price
  =f.text_field :price, class: 'form-control'
  =f.label :image
  =f.file_field :image
  %br/
  =f.submit yield(:button_text), class: 'btn btn-primary signup-bttn edit-bttn'